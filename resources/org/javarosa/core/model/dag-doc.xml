<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Repeat group with position calculation</h:title>
        <model>
            <instance>
                <data id="rgwp">
                    <node1/>
                    <node2>true</node2>
                    <node3/>
                    <node4/>
                </data>
            </instance>
            <bind calculate="if(/data/node2=true,1,0)" nodeset="/data/node1" type="int"/>
            <bind nodeset="/data/node2" type="bool"/>
            <bind nodeset="/data/node3" type="int" relevant="/data/node1 = 1"/>
            <bind nodeset="/data/node4" type="int" constraint=". &lt; 10"/>
        </model>
    </h:head>
    <h:body>
        <input ref="/data/node1"/>
        <input ref="/data/node2"/>
        <input ref="/data/node3"/>
        <input ref="/data/node4"/>
    </h:body>
</h:html>