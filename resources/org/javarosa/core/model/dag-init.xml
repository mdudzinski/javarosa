<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Repeat group with position calculation</h:title>
        <model>
            <instance>
                <data id="rgwp">
                    <nodeA/>
                    <nodeB/>
                    <nodeC>2</nodeC>
                </data>
            </instance>
            <bind nodeset="/data/nodeA" calculate="pow(/data/nodeC, 2)" type="int"/>
            <bind nodeset="/data/nodeB" calculate="pow(/data/nodeC, 2)" type="int" />
            <bind nodeset="/data/nodeC" type="int"/>
        </model>
    </h:head>
    <h:body>
        <input ref="/data/nodeA"/>
        <input ref="/data/nodeB"/>
        <input ref="/data/nodeC"/>
    </h:body>
</h:html>